<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Contacts.Maui.ViewModels"
             xmlns:m="clr-namespace:Contacts.CoreBusiness;assembly=Contacts.CoreBusiness"
             x:DataType="vm:ContactsViewModel"
             x:Class="Contacts.Maui.Views_MVVM.Contacts_MVVM_Page"
             Title="Contacts_MVVM_Page">
    <Grid 
        Padding="5"
        RowDefinitions="50, *, 50"
        ColumnDefinitions="*"
        RowSpacing="5">
        <SearchBar 
            x:Name="SearchBar"
            Grid.Row="0" 
            Grid.Column="0"
            Placeholder="Search Contact"></SearchBar>

        <CollectionView    
            ItemsSource="{Binding Contacts}"
            Grid.Row="1"
            Grid.Column="0">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Contact">
                    <StackLayout>
                        <Frame Margin="0,5,0,5">
                            <StackLayout Orientation="Vertical" Spacing="5">
                                <Label Text="{Binding Name}"></Label>
                                <Label Text="{Binding Email}"></Label>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>

        <Button 
            Grid.Row="2"
            Grid.Column="0"
            x:Name="btnAdd" 
            Text="Add Contact"></Button>

        
    </Grid>
</ContentPage>