<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Maui.Views.ContactsPage"
             Title="Contacts">
    <VerticalStackLayout Spacing="5">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnEditContact" Clicked="btnEditContact_Clicked" Text="Edit Contact"></Button>
        <Button x:Name="btnAddContact" Clicked="btnAddContact_Clicked"  Text="Add Contact"></Button>
    </VerticalStackLayout>
</ContentPage>