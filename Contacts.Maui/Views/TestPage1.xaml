<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Contacts.Maui.ViewModels"
             x:DataType="vm:ContactViewModel"
             x:Class="Contacts.Maui.Views.TestPage1"
             Title="TestPage1">
    <VerticalStackLayout Spacing="10" Margin="20, 20, 20, 0">

        <Entry Placeholder="Name" Text="{Binding Contact.Name}" >
        </Entry>
        <Entry Placeholder="Email" Text="{Binding Contact.Email}">
        </Entry>
        <Entry Placeholder="Phone" Text="{Binding Contact.Phone}" >
        </Entry>
        <Entry Placeholder="Address" Text="{Binding Contact.Address}" >
        </Entry>

        <Button Text="Save" Command="{Binding SaveContactCommand}"></Button>

    </VerticalStackLayout>
</ContentPage>